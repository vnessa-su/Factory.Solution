@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been added!</h3>
}
else
{
  <ul>
  @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.LastName}, {engineer.FirstName}", "Details", new { id = engineer.EngineerId })</li>
    }
  </ul>
}

<div class="text-center m-5">
  @Html.ActionLink("Home", "Index", "Home", null, new {@class = "btn btn-secondary btn-lg mx-2 my-1"})

  @Html.ActionLink("List of Engineers", "Index", "Engineers", null, new {@class = "btn btn-secondary btn-lg mx-2 my-1"})
  @Html.ActionLink("Add Engineer", "Create", "Engineers", null, new {@class = "btn btn-secondary btn-lg mx-2 my-1"})

  @Html.ActionLink("List of Machines", "Index", "Machines", null, new {@class = "btn btn-secondary btn-lg mx-2 my-1"})
  @Html.ActionLink("Add Machine", "Create", "Machines", null, new {@class = "btn btn-secondary btn-lg mx-2 my-1"})
</div>