@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>

<div class="container page-content py-4">
  @if (@Model.Count == 0)
  {
    <h3>No engineers have been added!</h3>
  }
  else
  {
    <ul>
      @foreach (Engineer engineer in Model)
      {
        <li>@Html.ActionLink($"{engineer.LastName}, {engineer.FirstName}", "Details", new { id = engineer.EngineerId })</li>
      }
    </ul>
  }
</div>
