@{
  Layout = "_Layout";
}

@using Factory.Models

<h1>Machines</h1>

<div class="container page-content">
  @if (@Model.Count == 0)
  {
    <h3>No machines have been added!</h3>
  }
  else
  {
    <ul>
      @foreach (Machine machine in Model)
      {
        <li>@Html.ActionLink($"{machine.Manufacturer} | {machine.ProductModel}", "Details", new { id = machine.MachineId })
        </li>
      }
    </ul>
  }
</div>