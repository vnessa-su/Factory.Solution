@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Add Machine</h1>

<div class="container page-content">
  @using (Html.BeginForm())
  {
    <div class="form-group form-inline">
      @Html.LabelFor(model => model.Manufacturer, new{@class = "col-sm-4 col-form-label"})
      @Html.TextBoxFor(model => model.Manufacturer, new {@class = "form-control", required="required"})
    </div>
    <div class="form-group form-inline">
      @Html.LabelFor(model => model.ProductModel, new{@class = "col-sm-4 col-form-label"})
      @Html.TextBoxFor(model => model.ProductModel, new {@class = "form-control", required="required"})
    </div>
    <div class="form-group form-inline">
      @Html.LabelFor(model => model.CompanyEmail, new{@class = "col-sm-4 col-form-label"})
      @Html.TextBoxFor(model => model.CompanyEmail, new {@class = "form-control", required="required"})
    </div>
    <div class="form-group form-inline">
      @Html.LabelFor(model => model.CompanyPhoneNumber, new{@class = "col-sm-4 col-form-label"})
      @Html.TextBoxFor(model => model.CompanyPhoneNumber, new {@class = "form-control", required="required"})
    </div>
    <div class="form-group form-inline">
      @Html.LabelFor(model => model.CompanyAddress, new{@class = "col-sm-4 col-form-label"})
      @Html.TextBoxFor(model => model.CompanyAddress, new {@class = "form-control", required="required"})
    </div>
    <div class="form-group form-inline">
      @Html.LabelFor(model => model.CompanyWebsite, new{@class = "col-sm-4 col-form-label"})
      @Html.TextBoxFor(model => model.CompanyWebsite, new {@class = "form-control", required="required"})
    </div>

    <div class="text-center">
      <input type="submit" value="Add" class="btn btn-primary btn-lg" />
    </div>
  }
</div>